https://practice.geeksforgeeks.org/problems/longest-common-substring/0
Code:

#include<bits/stdc++.h>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
	int n1,n2,ans=0;
	string s1,s2;
	cin>>n1>>n2;
	cin>>s1>>s2;
	int dp[n1+1][n2+1];
	for(int i=0;i<=n2;i++)
	dp[0][i]=0;
	for(int i=0;i<=n1;i++)
	dp[i][0]=0;
	for(int i=0;i<n1;i++){
	    for(int j=0;j<n2;j++){
	        dp[i+1][j+1]=(s1[i]==s2[j]?dp[i][j]+1:0);
	        ans=max(ans,dp[i+1][j+1]);
	    }
	}
	cout<<ans<<"\n";
	}
	return 0;
}
